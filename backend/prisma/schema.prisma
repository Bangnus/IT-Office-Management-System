generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int     @id @default(autoincrement())
  username  String? @unique
  firstName String?
  lastName  String?
  password  String?
}

//ตารางนักเรียน
model student {
  id              Int              @id @default(autoincrement())
  studentID       String?          @unique
  firstname       String?
  lastname        String?
  classroomNumber classroomNumber? @relation(fields: [classroom], references: [id])
  classroom       Int?
}

//ตารางปวช
model vc {
  id                Int               @id @default(autoincrement())
  classroom         String?           @unique
  vcclassroomNumber classroomNumber[]
}

//ห้อง
model classroomNumber {
  id        Int       @id @default(autoincrement())
  className String?
  vc        vc?       @relation(fields: [vcID], references: [id])
  vcID      Int?
  vcstudent student[]
  images    images[]
}

model images {
  id                Int              @id @default(autoincrement())
  image             String?
  classroomNumberID Int?
  classroomNumber   classroomNumber? @relation(fields: [classroomNumberID], references: [id])
}

//Teacher
model Teacher {
  id Int @id @default(autoincrement())
  fullName String?
  position String?
  TeacherImage String?
}

// //ตารางห้องเรียน
model classroom {
  id       Int     @id @default(autoincrement())
  roomID   String?
  roomname String?
}

//อุปกรณ์
model equipment {
  id Int @id @default(autoincrement())
  name String?
  number String?
  image String?

}
