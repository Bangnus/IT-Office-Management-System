generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int     @id @default(autoincrement())
  username  String? @unique
  firstName String?
  lastName  String?
  password  String?
}

//ตารางนักเรียน
model student {
  id              Int              @id @default(autoincrement())
  studentID       String?
  firstname       String?
  lastname        String?
  classroomNumber classroomNumber? @relation(fields: [classroom], references: [id])
  classroom       Int?
}

//ตารางปวช
model vc {
  id                Int               @id @default(autoincrement())
  classroom         String?
  vcclassroomNumber classroomNumber[]
}

//ห้อง
model classroomNumber {
  id        Int       @id @default(autoincrement())
  className String?
  vc        vc?       @relation(fields: [vcID], references: [id])
  vcID      Int?
  vcstudent student[]
}

//ตารางปวส
model hvc {
  id        Int       @id @default(autoincrement())
  classroom String?
}

//ตารางป.ตรี
model ba {
  id        Int       @id @default(autoincrement())
  classroom String?
}

